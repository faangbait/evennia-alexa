{
    "document": {
        "type": "APL",
        "version": "1.1",
        "settings": {},
        "theme": "dark",
        "import": [
            {
                "name": "alexa-layouts",
                "version": "1.0.0"
            },
            {
                "name": "alexa-styles",
                "version": "1.1.0"
            }
        ],
        "resources": [
            {
                "description": "Stock color for the light theme",
                "colors": {
                    "colorTextPrimary": "#151920"
                }
            },
            {
                "description": "Stock color for the dark theme",
                "when": "${viewport.theme == 'dark'}",
                "colors": {
                    "colorTextPrimary": "#F5F5F5"
                }
            }
        ],
        "styles": {
            "baseStyle": {
                "description": "Set base color style",
                "values": [
                    {
                        "color": "@colorTextPrimary"
                    }
                ]
            },
            "uiStyle": {
                "description": "Set UI Style",
                "extend": "baseStyle",
                "values": [
                    {
                        "fontFamily": "Bookerly",
                        "fontStyle": "italic"
                    }
                ]
            },
            "fontThin": {
                "description": "Set to thin font",
                "values": [
                    {
                        "fontWeight": "100"
                    }
                ]
            },
            "fontLight": {
                "description": "Set to light font",
                "values": [
                    {
                        "fontWeight": "300"
                    }
                ]
            },
            "fontMedium": {
                "description": "Set font to medium",
                "values": [
                    {
                        "fontWeight": "500"
                    }
                ]
            },
            "fontHeavy": {
                "description": "Set font to bold",
                "values": [
                    {
                        "fontWeight": "700"
                    }
                ]
            },
            "fontXHeavy": {
                "description": "Set font to extra bold",
                "values": [
                    {
                        "fontWeight": "900"
                    }
                ]
            },
            "textSizeXSmall": {
                "description": "Extra small text size",
                "values": [
                    {
                        "fontSize": 16
                    }
                ]
            },
            "textSizeSmall": {
                "description": "Small text size",
                "values": [
                    {
                        "fontSize": 20
                    }
                ]
            },
            "textSizeMedium": {
                "description": "Medium text size",
                "values": [
                    {
                        "fontSize": 24
                    }
                ]
            },
            "textSizeLarge": {
                "description": "Large text size",
                "values": [
                    {
                        "fontSize": 28
                    }
                ]
            },
            "textSizeXLarge": {
                "description": "Extra large text size",
                "values": [
                    {
                        "fontSize": 32
                    }
                ]
            },
            "styleCardTitle": {
                "description": "Style for card title",
                "extend": [
                    "baseStyle",
                    "fontHeavy",
                    "textSizeLarge"
                ]
            },
            "styleCardText": {
                "description": "Style for card text",
                "extend": [
                    "baseStyle",
                    "fontLight",
                    "textSizeMedium"
                ]
            },
            "styleUIHeader": {
                "description": "Style for UI headers",
                "extend": [
                    "uiStyle",
                    "fontHeavy",
                    "textSizeSmall"
                ]
            },
            "styleUIBody": {
                "description": "Style for UI body",
                "extend": [
                    "uiStyle",
                    "fontMedium",
                    "textSizeSmall"
                ]
            }
        },
        "onMount": [],
        "graphics": {},
        "commands": {},
        "layouts": {},
        "mainTemplate": {
            "description": "********* Full-screen background image **********",
            "parameters": [
                "payload"
            ],
            "items": [
                {
                    "type": "Frame",
                    "width": "100%",
                    "height": "100%",
                    "item": [
                        {
                            "type": "Container",
                            "when": "${viewport.shape == 'round'}",
                            "width": "100%",
                            "height": "100%",
                            "alignItems": "center",
                            "items": [
                                {
                                    "type": "Text",
                                    "style": "textStyleDisplay6Alt",
                                    "paddingTop": "@spacingLarge",
                                    "text": "${payload.template_data.textContent.card_title.text}"
                                },
                                {
                                    "type": "Text",
                                    "style": "textStyleBody",
                                    "text": "${payload.template_data.textContent.card_text.text}"
                                },
                                {
                                    "type": "Container",
                                    "data": "${payload.template_data.uiContent.contents.data}",
                                    "direction": "row",
                                    "spacing": "@spacingMedium",
                                    "items": [
                                        {
                                            "type": "Text",
                                            "when": "${data.header}",
                                            "style": "textStyleCallout",
                                            "color": "@colorText",
                                            "text": "${data.header}"
                                        },
                                        {
                                            "type": "Text",
                                            "style": "textStyleCallout",
                                            "spacing": "@spacing3XSmall",
                                            "text": "${data},"
                                        }
                                    ]
                                },
                                {
                                    "type": "Container",
                                    "data": "${payload.template_data.uiContent.exits.data}",
                                    "direction": "row",
                                    "spacing": "@spacingMedium",
                                    "items": [
                                        {
                                            "type": "Text",
                                            "when": "${data.header}",
                                            "style": "textStyleCallout",
                                            "text": "${data.header}"
                                        },
                                        {
                                            "type": "Text",
                                            "style": "textStyleCallout",
                                            "spacing": "@spacing3XSmall",
                                            "text": "${data},"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "when": "${viewport.shape != 'round'}",
                            "width": "100%",
                            "height": "100%",
                            "item": [
                                {
                                    "headerTitle": "${payload.template_data.title}",
                                    "type": "AlexaHeader"
                                },
                                {
                                    "type": "Frame",
                                    "paddingLeft": "@marginLeft",
                                    "items": [
                                        {
                                            "type": "Container",
                                            "item": [
                                                {
                                                    "type": "Text",
                                                    "style": "textStyleDisplay6Alt",
                                                    "color": "#1E2222",
                                                    "text": "${payload.template_data.textContent.card_title.text}"
                                                }
                                            ]
                                        }
                                    ],
                                    "backgroundColor": "@colorBackgroundReversed"
                                },
                                {
                                    "type": "Frame",
                                    "height": "50%",
                                    "paddingLeft": "@marginLeft",
                                    "paddingRight": "@marginRight",
                                    "grow": 1,
                                    "items": [
                                        {
                                            "type": "Container",
                                            "height": "100%",
                                            "items": [
                                                {
                                                    "type": "ScrollView",
                                                    "item": [
                                                        {
                                                            "type": "Text",
                                                            "style": "textStyleBody",
                                                            "paddingTop": "@spacingSmall",
                                                            "color": "@colorText",
                                                            "text": "${payload.template_data.textContent.card_text.text}"
                                                        }
                                                    ],
                                                    "grow": 1
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "type": "Frame",
                                    "paddingLeft": "@marginLeft",
                                    "paddingRight": "@marginRight",
                                    "items": [
                                        {
                                            "type": "Container",
                                            "data": "${payload.template_data.uiContent.contents.data}",
                                            "alignItems": "baseline",
                                            "direction": "row",
                                            "justifyContent": "spaceEvenly",
                                            "items": [
                                                {
                                                    "type": "Text",
                                                    "when": "${data.header}",
                                                    "style": "textStyleTitle",
                                                    "color": "@colorTextReversed",
                                                    "text": "${data.header}"
                                                },
                                                {
                                                    "type": "Text",
                                                    "style": "textStyleActionHint",
                                                    "spacing": "@spacingSmall",
                                                    "color": "@colorTextReversed",
                                                    "text": "${data}"
                                                }
                                            ]
                                        }
                                    ],
                                    "backgroundColor": "@colorBackgroundReversed"
                                },
                                {
                                    "type": "Frame",
                                    "paddingLeft": "@marginLeft",
                                    "paddingRight": "@marginRight",
                                    "alignSelf": "auto",
                                    "position": "relative",
                                    "item": [
                                        {
                                            "type": "Container",
                                            "data": "${payload.template_data.uiContent.exits.data}",
                                            "alignItems": "baseline",
                                            "direction": "row",
                                            "justifyContent": "spaceBetween",
                                            "items": [
                                                {
                                                    "type": "Text",
                                                    "when": "${data.header}",
                                                    "style": "textStyleTitle",
                                                    "color": "@colorTextReversed",
                                                    "text": "${data.header}"
                                                },
                                                {
                                                    "type": "Text",
                                                    "style": "textStyleActionHint",
                                                    "spacing": "@spacingSmall",
                                                    "color": "@colorTextReversed",
                                                    "text": "${data}"
                                                }
                                            ]
                                        }
                                    ],
                                    "backgroundColor": "@colorBackgroundReversed"
                                }
                            ]
                        }
                    ],
                    "backgroundColor": "@colorBackground"
                }
            ]
        }
    },
    "datasources": {
        "template_data": {
            "type": "object",
            "objectId": "bt2",
            "backgroundImage": {
                "sources": [
                    {
                        "url": "https://d2o906d8ln7ui1.cloudfront.net/images/BT2_Background.png",
                        "size": "small",
                        "widthPixels": 0,
                        "heightPixels": 0
                    }
                ]
            },
            "title": "Tidebreak",
            "textContent": {
                "title": {
                    "type": "PlainText",
                    "text": "Tidebreak"
                },
                "subtitle": {
                    "type": "PlainText",
                    "text": "Subtitle"
                },
                "card_title": {
                    "type": "PlainText",
                    "text": "What is Lorem Ipsum?"
                },
                "card_text": {
                    "type": "PlainText",
                    "text": "Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                },
                "hint_text": {
                    "type": "PlainText",
                    "text": "Hint Text"
                }
            },
            "uiContent": {
                "exits": {
                    "type": "Sequence",
                    "data": [
                        {
                            "header": "You can go: "
                        },
                        "Up",
                        "Down",
                        "Left",
                        "And a really long exit"
                    ]
                },
                "contents": {
                    "type": "Sequence",
                    "data": [
                        {
                            "header": "You see: "
                        },
                        "You",
                        "Me",
                        "Really long name"
                    ]
                },
                "equipment": {
                    "type": "Sequence",
                    "data": ""
                }
            }
        }
    }
}